<div class="blog-post">
    <!-- Title -->
    <div class="blog-post-header tc-l">
        <h2 class="blog-post-title">
            <a href="<%- config.root %><%- item.path %>">
                <%- item.title || item.link%>
            </a>
        </h2>
        <!-- Date and Time to Read -->
        <p class="blog-post-meta">
            <%= item.date.format(config.date_format) %>
            <% if(item.reading_time) { %>
                <%- item.reading_time %> minute read
            <% } %>
        </p>
    <div>
    <!-- Content -->
    <div class="blog-post-content tl">
        <h3 class ="blog-post-subtitle leather moon f5 tracked white-40"> 
            <% if(item.subtitle) { %>
                <%- item.subtitle %>
            <% } %>
        </h3>
        <%- item.content %>
        <hr />
    </div>
    <!-- Tags and Categories links -->
    <%- partial('post-tags', {item: item}) %>
    <%- partial('post-categories', {item: item}) %>
</div>